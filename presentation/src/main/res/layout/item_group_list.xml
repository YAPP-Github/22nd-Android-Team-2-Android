<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_group_list"
    android:layout_marginBottom="12dp"
    android:paddingStart="22dp"
    android:paddingEnd="12dp">

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15dp"
        android:lineHeight="24dp"
        android:textColor="#171717"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_group_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:lineHeight="16dp"
        android:textSize="11dp"
        android:textColor="#171717"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/tv_group_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_group_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_group_description"
        app:layout_constraintTop_toBottomOf="@+id/tv_group_description">

        <TextView
            android:id="@+id/tv_group_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#979797"
            android:textSize="10dp" />

        <View
            android:id="@+id/view_separator"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="6dp"
            android:background="#CFCFCF" />

        <TextView
            android:id="@+id/tv_group_organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#979797"
            android:textSize="10dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_group_image"
        android:layout_width="60dp"
        android:layout_height="76dp"
        android:background="@drawable/ic_group_list_img_shape"
        android:scaleType="centerCrop"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
