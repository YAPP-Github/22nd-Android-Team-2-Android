<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_dialog_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/et_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="18dp"
            android:paddingTop="26dp"
            android:paddingBottom="36dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#7E7E7E"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/et_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_gray_radius_8dp"
                android:paddingVertical="14dp"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:textSize="26dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/summit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_input_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:paddingStart="0dp"
                android:paddingEnd="18dp"
                tools:text="03/10" />

            <TextView
                android:id="@+id/tv_summit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_orange_radius_8dp"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:text="모임 들어가기"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</layout>
